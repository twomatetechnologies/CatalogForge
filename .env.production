# Production Environment Variables

# Server configuration
NODE_ENV=production
PORT=3000

# Database configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=catalog_builder
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/catalog_builder

# Session configuration
SESSION_SECRET=your_secure_session_secret_key_change_this

# PDF Service configuration
PDF_STORAGE_PATH=/app/public/generated
TEMPLATE_PATH=/app/public/templates

# Enable application logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs/catalog-builder.log